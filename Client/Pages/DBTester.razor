@page "/dbtester"
@using schedulesUnitedHosted.Shared
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient Http

<h1>DB Connection Test</h1>

<p>This component tests connecting, getting, and sending data to the DB.</p>

@if (resp == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p><em>@resp</em></p>
}

@code {
    private string resp;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            resp = await Http.GetFromJsonAsync<String>("DB");
        }catch(Exception e)
        {
            resp = e.Message + "\n" + e.StackTrace;
        }
    }

}

